{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build LethalCompany (MSBuild)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/.vscode/build.ps1",
        "-Project",
        "${workspaceFolder}/LethalCompany/LethalCompany.csproj",
        "-Configuration",
        "Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}

